!!!
%html{html_attrs}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title Transdmin

    / CSS
    %link{:rel => 'stylesheet', :type => 'text/css', 
      :media => 'screen', :href => 'style/css/transdmin.css'}

    /[if IE 6]
      %link{:rel => 'stylesheet', :type => 'text/css', 
        :media => 'screen', :href => 'style/css/ie6.css'}

    /[if IE 7]
      %link{:rel => 'stylesheet', :type => 'text/css', 
        :media => 'screen', :href => 'style/css/ie7.css'}

    / JavaScripts
    %script{:type => 'text/javascript', :src => 'style/js/jquery.js'}
