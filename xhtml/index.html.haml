        =render_partial :breadcrumbs
        
        #main
          %form.jNice{:action => ''}
            %h3 Sample section
            %table{:cellpadding => '0', :cellspacing => '0'}
              %tr
                %td Vivamus rutrum nibh in felis tristique vulputate
